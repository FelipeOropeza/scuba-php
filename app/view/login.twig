<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="./resource/style.css">
		<title>Login</title>
	</head>
	<body>
		<h1>Scuba<span>PHP</span>
		</h1>

		<form action="/login/check" method="POST">
			{% if success_message %}
				<div class="mensagem-sucesso" id="success-message"><p>{{ success_message }}</p></div>
			{% endif %}
			<label for="login">Email</label>
			<input type="text" name="person[email]" value="{{ person.email ?? '' }}">
			<span class="mensagem-erro">{{ errors['email'] }}</span>

			<label for="password">Senha</label>
			<input type="password" name="person[password]" value="{{ person.password ?? '' }}">
			<span class="mensagem-erro">{{ errors['password'] }}</span>

			<button>Entrar</button>
			<a href="/register">Cadastrar Usu√°rio</a>
			<a href="./?page=forget-password">Esqueci Minha Senha</a>
		</form>
		<script>
			window.onload = function() {
				var successMessage = document.getElementById('success-message');
				if (successMessage) {
					setTimeout(function() {
						successMessage.style.display = 'none';
					}, 3000);
				}
			};
		</script>
	</body>
</html>
